<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warenkorb</title>
</head>
<body>
    <h1>Warenkorb</h1>
    
    @if (cartItems.length > 0)
        <ul>
            @each(cartItem in cartItems)
                <li>{{ cartItem.name }} - Menge: {{ cartItem.quantity }} - Preis: €{{ cartItem.price }}</li>
            @endeach
        </ul>
        <p>Gesamtpreis: €{{ totalPrice }}</p>
    @else
        <p>Dein Warenkorb ist leer.</p>
    @endif

    <div id="cart-container"></div>

    <script>
    // Warenkorb aus dem localStorage holen und anzeigen
    function displayCart() {
        const cart = JSON.parse(localStorage.getItem('cart')) || [];
        const cartContainer = document.getElementById('cart-container');
        
        cartContainer.innerHTML = ''; // Leere den Warenkorb-Container
        
        cart.forEach(item => {
            const cartItem = document.createElement('div');
            cartItem.innerHTML = `
                <p>${item.productName} - ${item.productPrice} € x ${item.quantity}</p>
            `;
            cartContainer.appendChild(cartItem);
        });
    }

    // Rufe diese Funktion auf der Warenkorb-Seite auf
    displayCart();
    </script>

</body>
</html>
