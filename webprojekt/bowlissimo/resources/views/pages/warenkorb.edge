<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warenkorb</title>
    <link rel="stylesheet" href="/resources/css/app.css">
</head>
<body>
    
    <h1>Warenkorb</h1>

        @if (alle_ausgewaehlten_produkte.length > 0)
            @each (produkt in alle_ausgewaehlten_produkte)
                <div class="produkt">
                    <h2> {{ produkt.produkt }}</h2>
                    <!--Preis anzeigen auf 2 Nachkommastellen gerundet-->
                    <p>  {{ (produkt.preis * produkt.menge).toFixed(2) }} €</p>

                    <form action="/warenkorb/update/{{produkt.produkt}}" method="post" enctype="application/x-www-form-urlencoded">
                        {{csrfField()}}
                        <label for="menge">Menge:</label>
                        <input type="number" id="menge" name="menge" value="{{produkt.menge}}" min="1" pattern="\d*" onchange="this.form.submit()">
                    </form>

                    <form action="/warenkorb/entfernen/{{produkt.produkt}}" method="post" enctype="application/x-www-form-urlencoded">
                        {{csrfField()}}
                        <input type="hidden" name="produkt_id" value="{{ produkt.id }}">
                        <button type="submit">Entfernen</button>
                </div>
            @endeach
    @else
        <p>Dein Warenkorb ist leer. <a href="/">Zurück zum Shop</a></p>
    @endif

    <p>Gesamtpreis: {{ gesamtpreis }} €</p>

</body>
</html>
