<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warenkorb</title>
    <link rel="stylesheet" href="resources/css/app.css">
</head>
<body>
    
    <h1>Warenkorb</h1>

        @if (ausgewaehlte_produkte)
            @each (produkt in ausgewaehlte_produkte)
                <div class="produkt">
                    @if (typeof produkt.produkt === 'number')
                        <h2>Pasta-Bowl</h2>
                    @else
                        <h2>{{ produkt.produkt }}</h2>
                    @endif
                    <!--Preis anzeigen auf 2 Nachkommastellen gerundet-->
                    <p>  {{ (produkt.preis * produkt.menge).toFixed(2) }} €</p>

                    <form action="/warenkorb/update/{{produkt.produkt}}" method="post" enctype="application/x-www-form-urlencoded">
                        {{csrfField()}}
                        <label for="menge">Menge:</label>
                        <input type="number" id="menge" name="menge" value="{{produkt.menge}}" min="1" step="1" pattern="\d*" onchange="this.form.submit()">
                    </form>
                    <button onclick="window.location.href='/warenkorb/entfernen/{{produkt.produkt}}'">Entfernen</button>
                </div>
            @endeach
            <p>Gesamtpreis: {{ gesamtpreis }} €</p>
    @else
        <p>Dein Warenkorb ist leer. <a href="/">Zurück zum Shop</a></p>
    @endif

    <button class="auswahl" onclick="window.location.href='/kasse'">Zur Kasse</button>

    <footer>
        @include('pages/partials/footer')
    </footer>


</body>
</html>
