    <main class="main">
        <div class="überschrift">
            <h1>BEILAGEN</h1>
        </div>

        <div class="beilagen">
            <h2 class="überschrift_auswahl">SALATE</h2>
            <div class="produkt_auswahl">
                @each (sorte in salate)
                    <div class="produkt_sorten" data-id="{{ sorte.id }}">
                        <img src="{{ sorte.bild }}" alt="{{ sorte.id }}" longdesc="Ein Bild von {{ sorte.id }} in Herzform." width="200" height="200"> 
                        <div class="auswahl">
                            <button class="auswahl_button" onclick="window.location.href='/warenkorb/hinzufuegen/beilagen/{{sorte.id}}'">
                                <span class="auswahl_button_text">Auswählen</span>
                            </button>
                            <h4 class= "produkt_id">{{ sorte.id }}</h4>
                            <p class="produkt_preis" data-preis="NULL">{{ sorte.preis }}</p>
                            <p class="produkt_preis_euro" data-preis="{{ sorte.preis }}">€</p>
                            <button class="details_button" onclick="window.location.href='/details/beilagen/{{ sorte.id }}'"'>
                                    <span class="details_button_text">Details</span>
                            </button>
                        </div>
                    </div>
                @endeach
            </div>
        </div>

